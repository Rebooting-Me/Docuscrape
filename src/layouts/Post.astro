---
import Base from "./Base.astro";
---

<Base pageTitle="FAQ page">
  <div class="content">
    <slot />
  </div>
</Base>

<style is:inline>
  .content {
    max-width: 1000px;
    margin: 0 auto;
    padding: 2rem;
  }
  h1 {
    font-size: 4rem;
    margin-bottom: 1rem;
    background-image: linear-gradient(to right, #ffc700, #cc00ff);
    color: transparent;
    background-clip: text;
  }
  h2 {
    font-size: 2rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  p {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    font-weight: 300;
  }

  p > em {
    color: #ffc700;
    font-weight: 200;
  }

  hr {
    width: 50%;
    margin: 2rem 0;
    margin: 1.5rem auto;
  }
  img {
    display: block;
    margin: 0 auto;
    max-width: 350px;
  }
  figcaption {
    text-align: center;
    font-weight: 100;
    font-size: 0.8rem;
    margin-bottom: 1.5rem;
    a {
      color: #60a7ff;
      font-weight: 500;
    }
  }
</style>
