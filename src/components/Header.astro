---
import Navigation from "./Nav.astro";
---

<nav>
  <a style="max-width: 250px;" href="/">
    <img
      id="logoImage"
      src="/logoImage.svg"
      alt="Docuscrape logo"
      style="width: 120%; height: auto; display: block;"
    />
  </a>
  <Navigation />
</nav>

<style>
  nav {
    display: flex;
    margin: 1.5rem 0 0 0;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    padding: 0 3rem;
  }
  @media (max-width: 360px) {
    nav {
      justify-content: center;
      gap: 2rem;
    }
  }
</style>
